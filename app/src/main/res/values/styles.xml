<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="WelcomeScreenText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/dp18</item>
    </style>

    <!--Text Formating Styled-->
    <style name="Regular_black_18_text">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular_greyish_18_text">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/color_8B8E8C</item>
    </style>

    <style name="Regular_black_14_text">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular_black_15_text">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular_black_16_text">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular_black_17_text">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_17</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Semibold_black_18_text">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Semibold_white_18_text">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Semibold_white_17_text">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_17</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SemiBold_black_17_text">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_17</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OTPText">
        <item name="android:layout_width">@dimen/dp50</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dp10</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:textSize">@dimen/text_30</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Semibold_black_18_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLength">1</item>

    </style>



    <!--TextInpur Layout Formating-->
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="TextInputLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:digits">,@.-&amp;#(/)*qwertzuiopasdfghjklyxcvbnm,QWERTYUIOPASDFGHJKLZXCVBNM,0123456789</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textAppearance">@style/Regular_black_18_text</item>
    </style>


    <!--Buttons-->
    <style name="SigninButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/primary_color_backround_rectangle_drawable</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textAppearance">@style/Regular_black_18_text</item>
    </style>

    <style name="ConfirmButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/primary_color_backround_rectangle_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textAppearance">@style/Regular_black_18_text</item>
    </style>

    <style name="ProceedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rectangle_drawable_colour_green</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textAppearance">@style/Regular_black_18_text</item>
    </style>

    <!--BottomNavigation-->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
    </style>

    <!-- blank styles for better code readability-->
    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>

    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">9sp</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">9sp</item>
    </style>

</resources>
