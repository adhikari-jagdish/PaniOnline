<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.common.OrderPlacedSuccessActivity">

        <ImageView
            android:id="@+id/img_order_placed"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:layout_marginBottom="@dimen/dp10"
            android:src="@drawable/ic_tick_circle"
            app:layout_constraintBottom_toTopOf="@id/txt_order_placed_success"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_order_placed_success"
            style="@style/Regular_black_25_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order placed successfully"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_order_placed_done"
            style="@style/ConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp50"
            android:padding="@dimen/dp13"
            android:text="@string/done"
            app:cornerRadius="@dimen/dp10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_order_placed_success" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
